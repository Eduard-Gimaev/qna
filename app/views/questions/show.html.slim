.div 
  = link_to 'Back', questions_path

.question
  = render @question

.comments
  - if @question.comments.any?
    div id='comments-list' 
    = render @question.comments
  / .new-comment
  /   = render 'comments/form', commentable: @question  

.answers
  - if @answers.any?
    div id='answers-list' data-question-id=@question.id
    = render @answers  
    p = '____________________________________________________________'
.new-answer
  = render 'answers/form'

    
